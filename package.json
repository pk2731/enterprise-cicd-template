{
  "name": "enterprise-cicd-template",
  "version": "1.0.0",
  "description": "Enterprise-grade CI/CD template with zero-human production access",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run compile && npm run bundle",
    "compile": "echo 'Compilation step - replace with your build process'",
    "bundle": "echo 'Bundling step - replace with your bundler'",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:integration": "jest --testMatch='**/integration/**/*.test.js' --passWithNoTests",
    "test:e2e": "echo 'E2E tests - replace with Cypress, Playwright, etc.'",
    "test:performance": "echo 'Performance tests - replace with Artillery, K6, etc.'",
    
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format:check": "prettier --check src/**/*.js",
    "format": "prettier --write src/**/*.js",
    
    "migrate": "echo 'Database migration - replace with your migration tool'",
    "db:check": "echo 'Database connectivity check'",
    "redis:check": "echo 'Redis connectivity check'",
    
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    
    "docker:build": "docker build -t enterprise-app .",
    "docker:run": "docker run -p 3000:3000 enterprise-app",
    
    "prepare": "husky install"
  },
  "keywords": [
    "ci-cd",
    "template",
    "enterprise",
    "kubernetes",
    "security",
    "quality-gates"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "@types/jest": "^29.5.8",
    "@types/express": "^4.17.21"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/test/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}